<div style="{{style}}" class="input {{className}}">
  <label class="input__label text-base" for="{{name}}">{{labelText}}</label>
  <input class="input__input {{#if errorText}} input__input_error {{/if}}" id="{{name}}" name="{{name}}" type="{{type}}" />
  {{#if errorText}}
    <span class="input__error error-text">{{errorText}}</span>
  {{/if}}
</div>

